---
// src/components/Experience.astro
import { CV_DATA } from '../data/cv-data.js';

const { experience } = CV_DATA;
---
<section id="experiencia">
    <h2 class="text-2xl mb-6">Experiencia Laboral</h2>
    <div class="flex flex-col gap-10">
        {experience.map(({ title, company, date, description }) => (
            <article class="flex gap-4">
                <div class="text-sky-300 pt-1 min-w-28 text-sm text-right">{date}</div>
                <div>
                    <h3 class="font-semibold text-lg text-slate-100">{title}</h3>
                    <h4 class="text-slate-400 mb-2">{company}</h4>
                    <p class="text-pretty">{description}</p>
                </div>
            </article>
        ))}
    </div>
</section>