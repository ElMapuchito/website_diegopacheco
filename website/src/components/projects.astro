---
// src/components/Projects.astro
import { CV_DATA } from '../data/cv-data.js';
import { Icon } from 'astro-icon/components';

const { projects } = CV_DATA;
---
<section id="proyectos">
    <h2 class="text-2xl mb-6">Proyectos Destacados</h2>
    <div class="flex flex-col gap-4">
        {projects.map(({ title, description, link }) => (
            <a 
              href={link}
              target="_blank"
              rel="noopener noreferrer"
              class="block p-4 rounded-lg ring-1 ring-white/10 bg-slate-800/50 hover:bg-slate-800/90 hover:ring-white/20 transition-all"
            >
                <h3 class="font-semibold text-lg text-slate-100 flex items-center gap-2">
                    {title}
                    <Icon name="lucide:arrow-up-right" class="size-4 opacity-70" />
                </h3>
                <p class="text-slate-400 text-sm mt-1 text-pretty">{description}</p>
            </a>
        ))}
    </div>
</section>