---
import '../styles/global.css'; 
import Navbar from '../components/navbar.astro';

interface Props {
	title: string;
}
const { title } = Astro.props;
---
<!doctype html>
<html lang="es" class="dark scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Portafolio Diego Pacheco" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

		<title>{title}</title>

		<link 
			rel="preload" 
			href="/fonts/onest-v9-latin-regular.woff2" 
			as="font" 
			type="font/woff2" 
			crossorigin
		>
		<link 
			rel="preload" 
			href="/fonts/onest-v9-latin-700.woff2" 
			as="font" 
			type="font/woff2" 
			crossorigin
		>
	</head>
	<body class="bg-slate-900 text-slate-300 font-[Onest]">
		<Navbar />
		<main class="container mx-auto max-w-3xl p-6 md:p-12">
			<slot />
		</main>
	</body>
</html>